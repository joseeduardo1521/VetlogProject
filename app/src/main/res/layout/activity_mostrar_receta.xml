<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Esta mascota no tiene ninguna receta asignada"
        android:textColor="@color/Azultxt"
        android:textSize="24sp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView para mostrar la lista de recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- BotÃ³n para agregar una nueva receta -->
    <Button
        android:id="@+id/btn_nueva_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Nueva receta"
        android:textColor="@color/white"
        android:background="@drawable/btnredondo"
        android:layout_alignParentBottom="true" />

</RelativeLayout>